{
  "name": "mern-todo-app",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "start": "node backend/server.js",
    "server": "cd backend && nodemon server.js",
    "client": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend && npm install && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
